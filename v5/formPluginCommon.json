{
  "grid": [
    { "id": "p1", "xs": 3, "class": "main", "table": "units" },
    { "id": "p2", "xs": 6, "class": "main", "table": "units" },
    { "id": "p3", "xs": 3, "class": "main", "table": "units" },
    {
      "id": "p9",
      "xs": 12,
      "class": "main",
      "table": "unitsTreeTable",
      "height": "fill"
    }
  ],

  "spacing": 10,

  "p1": [
    { "prop": "id", "title": "ID", "type": "text" },
    { "prop": "name", "title": "$Name", "type": "input" }
  ],

  "p2": [
    {
      "prop": "apiuri",
      "title": "API URI",
      "type": "input",
      "default": "http://localhost/zabbix/api_jsonrpc.php"
    },
    {
      "prop": "username",
      "title": "Zabbix Api User Name",
      "type": "input",
      "default": "Admin"
    },
    {
      "prop": "password",
      "title": "Zabbix Api User Password",
      "type": "password",
      "default": "zabbix"
    }
  ],

  "p3": [
    {
      "prop": "restarttime",
      "title": "$Unit_Restarttime",
      "type": "number",
      "default": 2
    },
    {
      "prop": "loglevel",
      "title": "$LogLevel",
      "type": "droplist",
      "data": "loglevelList"
    }
  ],

  "p9": [
    {
      "title": "",
      "type": "table",
      "prop": "unitsTreeTable",

      "columns": [
        { "prop": "name", "title": "ID", "type": "text", "width": 150 },
        { "prop": "state", "title": "$state", "type": "text", "width": 150 },
        {
          "prop": "laststart",
          "title": "$laststart",
          "type": "text",
          "width": 150
        },
        {
          "prop": "laststop",
          "title": "$laststop",
          "type": "text",
          "width": 150
        },
        { "prop": "uptime", "title": "$uptime", "type": "text", "width": 150 },
        { "prop": "error", "title": "$error", "type": "text", "width": 250 }
      ]
    }
  ]
}
