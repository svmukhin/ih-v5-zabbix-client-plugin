{
  "grid": [
    { "id": "p2", "xs": 12, "class": "main", "table": "devhard" },
    { "id": "p3", "xs": 12, "class": "main", "table": "devhard" },
    { "id": "p4", "xs": 12, "class": "main", "table": "devhard" }
  ],
  "spacing": 4,

  "p2": [
    { "prop": "chan", "title": "Name", "type": "input" },
    { "prop": "itemid", "title": "Item ID", "type": "input" },
    {
      "prop": "itemtype",
      "title": "Item type",
      "type": "droplist",
      "data": [
        {
          "id": "Host",
          "title": "Host"
        },
        {
          "id": "Item",
          "title": "Item"
        },
        {
          "id": "Trigger",
          "title": "Trigger"
        }
      ],
      "default": "Host"
    },
    { "prop": "valuename", "title": "Vaue Name", "type": "input" },
    { "prop": "description", "title": "Description", "type": "input" }
  ],

  "p3": [
    {
      "prop": "r",
      "title": "$Read",
      "type": "cb",
      "hide": "data.p2.dataType=='Method'"
    },
    {
      "prop": "calc",
      "title": "$Devhard_Calc",
      "type": "input",
      "hide": "!data.p3.r"
    }
  ],
  "p4": [
    { "prop": "w", "title": "$Write", "type": "cb" },
    {
      "prop": "wresult",
      "title": "$wResult",
      "type": "cb",
      "hide": "!data.p4.w"
    },
    {
      "prop": "calc_out",
      "title": "$Devhard_Calc_Out",
      "type": "input",
      "hide": "!data.p4.w"
    }
  ]
}
